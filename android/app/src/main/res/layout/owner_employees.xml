<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:layout_marginRight = "@dimen/margin_3rem"
	android:layout_marginLeft = "@dimen/margin_3rem"
	android:layout_marginBottom = "@dimen/margin_1rem"
	android:layout_marginTop = "@dimen/margin_1rem"
	android:background = "@drawable/box_shadow_default">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:elevation="50dp"
			android:padding="@dimen/margin_0"
			android:layout_gravity= "center">
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">
				<ImageView
					android:id="@+id/employee_photo"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:contentDescription="@string/employee_image_description"
					android:scaleType="centerCrop"/>
				<HorizontalScrollView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/margin_2rem"
					android:padding="@dimen/margin_3rem"
					android:layout_below="@id/employee_photo">
					<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="start">
						<LinearLayout
							android:id="@+id/name_layout"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:showDividers="middle"
							android:divider="@drawable/spacing">
							<TextView
								android:id="@+id/employee_name_hint"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Employee Name: "
								android:textStyle="bold"
								android:layout_weight="0"/>

							<TextView
								android:id="@+id/employee_dept_hint"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="0"
								android:text="Employee Department: "
								android:textStyle="bold" />

							<TextView
								android:id="@+id/employee_email_hint"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="0"
								android:text="Employee Email: "
								android:textStyle="bold" />

							<TextView
								android:id="@+id/employee_status_hint"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="0"
								android:text="Employee Status: "
								android:textStyle="bold" />

							<TextView
								android:id="@+id/employee_time_hint"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="0"
								android:text="Last Interaction Time: "
								android:textStyle="bold" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/dept_layout"
							android:layout_toEndOf="@id/name_layout"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="@dimen/margin_2rem"
							android:showDividers="middle"
							android:divider="@drawable/spacing"
							android:orientation="vertical">

							<TextView
								android:id="@+id/employee_name"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"/>

							<TextView
								android:id="@+id/employee_dept"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"/>

							<TextView
								android:id="@+id/employee_email"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"/>

							<TextView
								android:id="@+id/employee_status"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"/>

							<TextView
								android:id="@+id/employee_time"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"/>
						</LinearLayout>
					</RelativeLayout>
				</HorizontalScrollView>
			</RelativeLayout>
		</android.support.v7.widget.CardView>
	</LinearLayout>
</android.support.constraint.ConstraintLayout>
