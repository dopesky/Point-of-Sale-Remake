<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:layout_margin = "@dimen/margin_3rem">
	<com.google.android.material.card.MaterialCardView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:elevation="50dp"
		android:padding="@dimen/margin_0"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<pl.droidsonroids.gif.GifImageView
				android:id="@+id/employee_photo"
				android:layout_width="match_parent"
				android:layout_height="@dimen/image_height_default"
				android:contentDescription="@string/employee_image_description"
				android:transitionName="@string/default_transition_name"
				android:scaleType="centerCrop"/>
			<androidx.constraintlayout.widget.ConstraintLayout
				android:id="@+id/employee_title"
				android:layout_width="match_parent"
				android:layout_below="@id/employee_photo"
				android:padding="@dimen/margin_3rem"
				android:layout_height="wrap_content">
				<de.hdodenhof.circleimageview.CircleImageView
					android:id="@+id/profile_image"
					android:contentDescription="@string/profile_image"
					android:layout_width="@dimen/circle_image_size"
					android:layout_height="@dimen/circle_image_size"
					android:scaleType="centerCrop"
					android:src="@drawable/ic_person_black_24dp"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"/>
				<TextView
					android:id="@+id/employee_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					style="?android:attr/textAppearanceMedium"
					android:textStyle="bold"
					android:layout_marginStart="@dimen/margin_3rem"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintLeft_toRightOf="@id/profile_image"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/employee_name"
					style="?android:attr/textAppearanceSmall"
					android:layout_weight="0"
					android:layout_marginStart="@dimen/margin_3rem"
					app:layout_constraintTop_toBottomOf="@id/employee_name"
					app:layout_constraintLeft_toRightOf="@id/profile_image"/>
				<com.google.android.material.button.MaterialButton
					android:id="@+id/show_more"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:rippleColor="@color/colorAccent"
					app:icon="@drawable/ic_keyboard_arrow_down_black_24dp"
					app:iconSize="34dp"
					app:iconTint="@color/blacksmoke"
					app:backgroundTint="@color/transparent"
					app:iconPadding="@dimen/margin_0"
					android:layout_marginEnd="@dimen/margin_2rem"
					app:layout_constraintRight_toRightOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"/>
			</androidx.constraintlayout.widget.ConstraintLayout>
			<HorizontalScrollView
				android:id="@+id/horizontal_scroll"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/employee_title">
				<net.cachapa.expandablelayout.ExpandableLayout
					android:id="@+id/expandable_layout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/margin_3rem"
					app:el_expanded="false"
					app:el_duration="300"
					app:el_parallax="1.0">
					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:showDividers="middle"
						android:divider="@drawable/spacing"
						android:orientation="vertical">
						<androidx.constraintlayout.widget.ConstraintLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">
							<com.mikepenz.iconics.view.IconicsImageView
								android:id="@+id/dept_img"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:contentDescription="@string/department_drawable"
								android:scaleType="centerInside"
								app:iiv_icon="faw-toolbox"
								app:iiv_padding="@dimen/margin_2rem"
								app:iiv_size="@dimen/cardview_icon_size"
								app:iiv_color="@android:color/darker_gray"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintLeft_toLeftOf="parent"/>
							<TextView
								android:id="@+id/employee_dept"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:layout_marginStart="@dimen/margin_3rem"
								style="?android:attr/textAppearanceMedium"
								android:textStyle="bold"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintLeft_toRightOf="@id/dept_img"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="0"
								android:text="@string/employee_department"
								style="?android:attr/textAppearanceSmall"
								android:layout_marginStart="@dimen/margin_3rem"
								app:layout_constraintTop_toBottomOf="@id/employee_dept"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintLeft_toRightOf="@id/dept_img"/>
						</androidx.constraintlayout.widget.ConstraintLayout>

						<androidx.constraintlayout.widget.ConstraintLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">
							<com.mikepenz.iconics.view.IconicsImageView
								android:id="@+id/email_img"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:contentDescription="@string/department_drawable"
								android:scaleType="centerInside"
								app:iiv_icon="faw-at"
								app:iiv_padding="@dimen/margin_2rem"
								app:iiv_size="@dimen/cardview_icon_size"
								app:iiv_color="@android:color/darker_gray"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintLeft_toLeftOf="parent"/>
							<TextView
								android:id="@+id/employee_email"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								style="?android:attr/textAppearanceMedium"
								android:textStyle="bold"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintLeft_toRightOf="@id/email_img"
								android:layout_marginStart="@dimen/margin_3rem"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="0"
								android:text="@string/employee_email"
								style="?android:attr/textAppearanceSmall"
								app:layout_constraintTop_toBottomOf="@id/employee_email"
								app:layout_constraintLeft_toRightOf="@id/email_img"
								android:layout_marginStart="@dimen/margin_3rem"/>
						</androidx.constraintlayout.widget.ConstraintLayout>

						<androidx.constraintlayout.widget.ConstraintLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">
							<com.mikepenz.iconics.view.IconicsImageView
								android:id="@+id/status_img"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:contentDescription="@string/department_drawable"
								android:scaleType="centerInside"
								app:iiv_icon="faw-exclamation-circle"
								app:iiv_padding="@dimen/margin_2rem"
								app:iiv_size="@dimen/cardview_icon_size"
								app:iiv_color="@android:color/darker_gray"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintLeft_toLeftOf="parent"/>
							<TextView
								android:id="@+id/employee_status"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:layout_marginStart="@dimen/margin_3rem"
								style="?android:attr/textAppearanceMedium"
								android:textStyle="bold"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintLeft_toRightOf="@id/status_img"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="0"
								android:text="@string/employee_status"
								style="?android:attr/textAppearanceSmall"
								android:layout_marginStart="@dimen/margin_3rem"
								app:layout_constraintTop_toBottomOf="@id/employee_status"
								app:layout_constraintLeft_toRightOf="@id/status_img"/>
						</androidx.constraintlayout.widget.ConstraintLayout>

						<androidx.constraintlayout.widget.ConstraintLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">
							<com.mikepenz.iconics.view.IconicsImageView
								android:id="@+id/time_img"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:contentDescription="@string/department_drawable"
								android:scaleType="centerInside"
								app:iiv_icon="faw-clock"
								app:iiv_padding="@dimen/margin_2rem"
								app:iiv_size="@dimen/cardview_icon_size"
								app:iiv_color="@android:color/darker_gray"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintLeft_toLeftOf="parent"/>
							<TextView
								android:id="@+id/employee_time"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="1"
								android:layout_marginStart="@dimen/margin_3rem"
								style="?android:attr/textAppearanceMedium"
								android:textStyle="bold"
								app:layout_constraintTop_toTopOf="parent"
								app:layout_constraintLeft_toRightOf="@id/time_img"/>
							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_weight="0"
								android:text="@string/last_interaction_time"
								style="?android:attr/textAppearanceSmall"
								android:layout_marginStart="@dimen/margin_3rem"
								app:layout_constraintTop_toBottomOf="@id/employee_time"
								app:layout_constraintLeft_toRightOf="@id/time_img"/>
						</androidx.constraintlayout.widget.ConstraintLayout>
					</LinearLayout>
				</net.cachapa.expandablelayout.ExpandableLayout>
			</HorizontalScrollView>
		</RelativeLayout>
	</com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
