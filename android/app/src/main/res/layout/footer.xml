<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<com.google.android.material.bottomappbar.BottomAppBar
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:backgroundTint="@color/whitesmoke"
		android:layout_gravity="bottom|center_horizontal"
		app:navigationIcon="@drawable/ic_copyright_black_24dp"
		android:padding="@dimen/margin_1rem">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/app_name"
				style="@style/TextAppearance.MaterialComponents.Caption"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintRight_toLeftOf="@id/my_name"
				app:layout_constraintBottom_toBottomOf="parent"
				style="@style/TextAppearance.MaterialComponents.Caption"
				android:text="@string/by_dopesky"
				android:layout_marginEnd="@dimen/margin_1rem"/>
			<TextView
				android:id="@+id/my_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintBottom_toBottomOf="parent"
				style="@style/TextAppearance.MaterialComponents.Caption"
				android:layout_marginEnd="@dimen/margin_3rem"
				android:drawableEnd="@drawable/ic_sentiment_satisfied_black_24dp"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</com.google.android.material.bottomappbar.BottomAppBar>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
