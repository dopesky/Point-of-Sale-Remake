<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".ui.owner.EditProductDetails">
	<data>
		<import type="com.herokuapp.pointofsale.viewmodels.owner.Owner.DataBinder" />
		<variable name="ownerVM" type="DataBinder" />
	</data>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<androidx.appcompat.widget.Toolbar
				android:id="@+id/actual_toolbar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/colorAccentText"
				android:theme="@style/AppTheme.AppBarOverlay"
				android:elevation="@dimen/margin_1rem"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"/>
			<ImageView
				android:id="@+id/profile_image"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/image_height_default"
				android:contentDescription="@string/profile_image"
				android:transitionName="@string/default_transition_name"
				android:scaleType="centerCrop"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"/>
			<LinearLayout
				android:id="@+id/layout"
				android:alpha="0.0"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:showDividers="middle"
				android:divider="@drawable/spacing"
				android:padding="@dimen/margin_3rem"
				app:layout_constraintTop_toBottomOf="@id/profile_image"
				app:layout_constraintLeft_toLeftOf="parent">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<com.mikepenz.iconics.view.IconicsImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:contentDescription="@string/department_drawable"
						android:scaleType="centerInside"
						app:iiv_icon="faw-shopping-bag"
						app:iiv_padding="@dimen/margin_2rem"
						app:iiv_size="@dimen/cardview_icon_size"
						app:iiv_color="@android:color/darker_gray"
						android:layout_gravity="center"/>
					<com.google.android.material.textfield.TextInputLayout
						android:id="@+id/product_edit_text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:helperText="e.g Peanuts">
						<com.google.android.material.textfield.TextInputEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="textPersonName"
							android:text="@={ownerVM.productName}"
							android:hint="@string/enter_product_name"
							android:singleLine="true"
							android:layout_alignParentTop="true"
							android:layout_alignParentEnd="true"/>
					</com.google.android.material.textfield.TextInputLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<com.mikepenz.iconics.view.IconicsImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:contentDescription="@string/department_drawable"
						android:scaleType="centerInside"
						app:iiv_icon="faw-money-bill-wave"
						app:iiv_padding="@dimen/margin_2rem"
						app:iiv_size="@dimen/cardview_icon_size"
						app:iiv_color="@android:color/darker_gray"
						android:layout_gravity="center"/>
					<com.google.android.material.textfield.TextInputLayout
						android:id="@+id/cost_edit_text"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:helperText="e.g 1200">
						<com.google.android.material.textfield.TextInputEditText
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:inputType="numberDecimal"
							android:text="@={ownerVM.cost}"
							android:hint="@string/enter_product_cost"
							android:singleLine="true"
							android:layout_alignParentTop="true"
							android:layout_alignParentEnd="true"/>
					</com.google.android.material.textfield.TextInputLayout>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
					<com.mikepenz.iconics.view.IconicsImageView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:contentDescription="@string/department_drawable"
						android:scaleType="centerInside"
						app:iiv_icon="faw-shopping-basket"
						app:iiv_padding="@dimen/margin_2rem"
						app:iiv_size="@dimen/cardview_icon_size"
						app:iiv_color="@android:color/darker_gray"
						android:layout_gravity="center_horizontal|bottom"/>
					<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content">
						<TextView
							android:id="@+id/textview"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="@string/select_a_category"
							android:layout_marginStart="@dimen/margin_1rem"
							app:layout_constraintLeft_toLeftOf="parent"
							app:layout_constraintTop_toTopOf="parent"/>
						<Spinner
							android:alpha="0.0"
							android:id="@+id/spinner"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							style="@style/Widget.AppCompat.Spinner.Underlined"
							android:paddingTop="@dimen/margin_0"
							android:paddingBottom="@dimen/margin_1rem"
							app:layout_constraintLeft_toLeftOf="parent"
							app:layout_constraintTop_toBottomOf="@id/textview"/>
					</androidx.constraintlayout.widget.ConstraintLayout>
				</LinearLayout>

				<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content">
					<com.google.android.material.button.MaterialButton
						android:id="@+id/save_button"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						style="@style/Widget.MaterialComponents.Button.OutlinedButton"
						android:layout_marginEnd="@dimen/margin_3rem"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintRight_toLeftOf="@id/disenable_button"
						android:onClick="updateProduct"
						android:text="@string/save"/>
					<com.google.android.material.button.MaterialButton
						android:id="@+id/disenable_button"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:layout_constraintTop_toTopOf="parent"
						app:layout_constraintRight_toRightOf="parent"
						style="@style/Widget.MaterialComponents.Button"
						android:onClick="disableEnableProduct"
						android:backgroundTint='@{ownerVM.productActive.equals("1") ? @color/colorDanger : @color/colorSuccess}'
						android:text='@{ownerVM.productActive.equals("1") ? "Disable" : "Enable"}'/>
				</androidx.constraintlayout.widget.ConstraintLayout>
			</LinearLayout>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</ScrollView>
</layout>
